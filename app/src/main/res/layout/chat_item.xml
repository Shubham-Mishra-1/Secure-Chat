<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="24dp"
    app:cardCornerRadius="30dp">

    <RelativeLayout
        android:id="@+id/relative_layout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/chat_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/key"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="62dp"
            android:layout_toEndOf="@+id/key"
            android:background="@drawable/edit_text_border"
            android:gravity="center_vertical"
            android:padding="6dp"
            android:textColor="@color/white_gray"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/decryption_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/login_reg_button_bg"
            android:src="@drawable/open_lock" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/relative_layout1"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/added_chat_view_bg">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:gravity="center"
            android:text="User_Name..."
            android:textColor="@color/white_gray"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/actual_message"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/user_name"
            android:layout_marginTop="-2dp"
            android:background="@drawable/added_chat_view_bg2"
            android:padding="6dp"
            android:text="THE ACTUAL MESSAGE"
            android:textColor="@color/white_gray"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>
</RelativeLayout>